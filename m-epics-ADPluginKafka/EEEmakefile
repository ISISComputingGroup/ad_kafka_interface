include ${EPICS_ENV_PATH}/module.Makefile
LIBVERSION = 1.0.0-BETA
EXCLUDE_ARCHS = eldk

LIBRDKAFKA_LIB_PATH ?= /usr/local/lib/
LIBRDKAFKA_INC_PATH ?= /usr/local/include/

USR_LDFLAGS += -L${LIBRDKAFKA_LIB_PATH}
USR_LDFLAGS += -Wl,-rpath=${LIBRDKAFKA_LIB_PATH}
USR_LDFLAGS += -lrdkafka++
USR_INCLUDES += -I${LIBRDKAFKA_INC_PATH}
USR_CXXFLAGS += -std=c++11
